<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.radar.radar"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:name="br.com.radar.application.ContextRadar"
        android:allowBackup="true"
        android:icon="@drawable/ic_luncher_blue"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="br.com.radar.activity.fragment.DetalheItem"
            android:label="@string/title_activity_detalhe_imagem">
        </activity>

        <activity
            android:name="br.com.radar.activity.MenuActivity"
            android:label="@string/title_activity_menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
